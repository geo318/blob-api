{
	"name": "blob-api-monorepo",
	"version": "1.0.0",
	"private": true,
	"packageManager": "pnpm@10.7.0",
	"scripts": {
		"dev": "pnpm --filter api dev & pnpm --filter web dev",
		"dev:api": "pnpm --filter api dev",
		"dev:web": "pnpm --filter web dev",
		"test": "pnpm --filter fs-core test",
		"build": "pnpm -r build",
		"db:generate": "pnpm --filter fs-adapter-postgres migrate:generate",
		"db:migrate": "pnpm --filter fs-adapter-postgres migrate:push:pg",
		"db:studio": "pnpm --filter fs-adapter-postgres migrate:studio",
		"start:api": "pnpm --filter api start",
		"start:web": "pnpm --filter web start",
		"start:all": "pnpm run db:migrate && pnpm run build && (pnpm --filter api start & pnpm --filter web start)",
		"lint": "biome check .",
		"format": "biome format --write .",
		"lint:fix": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"turbo": "^2.6.3",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
