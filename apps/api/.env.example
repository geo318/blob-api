DATABASE_URL=postgresql://postgres:postgres@localhost:5432/blob_api
JWT_SECRET=change-me

# Blob store selection: s3 | bunny | local
BLOB_STORE=local

# Local blob store
BLOB_STORE_PATH=./data/blobs

# Bunny Storage
BUNNY_STORAGE_ZONE=
BUNNY_ACCESS_KEY=
BUNNY_ENDPOINT=storage.bunnycdn.com

# S3-compatible storage
S3_ENDPOINT=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_FORCE_PATH_STYLE=true

# API port
PORT=3001

# Background orphan cleanup (cron syntax, blank to disable)
# Example: every hour -> 0 * * * *
CLEANUP_ORPHANS_CRON=
CLEANUP_ORPHANS_LIMIT=100
